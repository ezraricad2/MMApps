<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/md_red_500_25</item>​​
        <item name="colorControlNormal">@color/md_black_1000_50</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_200</item>
        <item name="android:colorForeground">@color/md_black_1000_75</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>​
        <!--<item name="multiSliderStyle">@style/Widget.MultiSlider</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorAccent">@color/cashpay_button_color</item>
        <item name="colorControlHighlight">@color/cashpay_button_color</item>​
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/input_register</item>
        <item name="colorPrimaryDark">@color/bg_main</item>
        <item name="colorAccent">@color/btn_logut_bg</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ListUserProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="commonButtonStyle">
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="commonButtonStyle2">
        <item name="android:background">@drawable/btn_blue_selector2</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F44336</item>
    </style>


    <style name="Widget.MultiSlider" parent="android:Widget">
    </style>

    <style name="BalancePointButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:background">@drawable/btn_bluedark_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/login_button_foot_size</item>
    </style>

    <style name="commonButtonTransparanStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:background">@drawable/btn_whitetrans_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/login_button_foot_size</item>
    </style>

</resources>
